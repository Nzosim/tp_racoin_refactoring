{
    "require": {
        "php": ">=8.2",
        "slim/slim": "3.*",
        "twig/twig": "3.*",
        "illuminate/database": "11.*",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "phpunit/phpunit": "^10.5"
    },
    "autoload":{
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcs:fix": "phpcbf",
        
        "phpstan": "phpstan analyse",
        "lint": "eslint . --ext .js "
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "^1.10"
    }
}
